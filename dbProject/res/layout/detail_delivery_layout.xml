<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/detail_delivery_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="배달음식점이름" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/detail_delivery_eval_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/detail_delivery_eval_float"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TextView>
    </LinearLayout>

    <ListView
        android:id="@+id/detail_delivery_comment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </ListView>

    <Button
        android:id="@+id/detail_delivery_do_eval"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="나도 평가하기" >
    </Button>

</LinearLayout>